<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground"
    tools:context="com.example.venkatesh.presencesystem.MainActivity">

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_above="@+id/btnmsg"
        android:layout_alignEnd="@+id/btnmsg"
        android:layout_alignStart="@+id/btnmsg"
        android:layout_marginBottom="45dp"
        android:text="Go Live"
        android:textColor="#E65100"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:id="@+id/btnmsg"
        android:layout_width="295dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Instant Messaging"
        android:textColor="#E65100"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="SAFE"
        android:textAlignment="center"
        android:textColor="#FFE0B2"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnspddial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnmsg"
        android:layout_alignStart="@+id/btnmsg"
        android:layout_below="@+id/btnmsg"
        android:layout_marginTop="56dp"
        android:text="SPEED DIAL"
        android:textColor="#E65100"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
